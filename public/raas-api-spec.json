    "/auth/realms/cdp/protocol/openid-connect/token": {
      "post": {
        "tags": ["Authentication"],
        "summary": "Get access token",
        "description": "Authenticate and get an access token for API access",
        "operationId": "getAccessToken",
        "requestBody": {
          "required": true,
          "content": {
            "application/x-www-form-urlencoded": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string",
                    "example": "testagentae"
                  },
                  "password": {
                    "type": "string",
                    "example": "Admin@123"
                  },
                  "grant_type": {
                    "type": "string",
                    "example": "password"
                  },
                  "client_id": {
                    "type": "string",
                    "example": "cdp_app"
                  },
                  "client_secret": {
                    "type": "string",
                    "example": "mSh18BPiMZeQqFfOvWhgv8wzvnNVbj3Y"
                  }
                },
                "required": ["username", "password", "grant_type", "client_id", "client_secret"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful authentication",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "access_token": {
                      "type": "string"
                    },
                    "expires_in": {
                      "type": "integer"
                    },
                    "refresh_expires_in": {
                      "type": "integer"
                    },
                    "refresh_token": {
                      "type": "string"
                    },
                    "token_type": {
                      "type": "string"
                    },
                    "scope": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
