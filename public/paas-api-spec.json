                      },
                      "date_of_birth": {
                        "type": "string",
                        "example": "1995-08-22"
                      },
                      "country_of_birth": {
                        "type": "string",
                        "example": "IN"
                      },
                      "nationality": {
                        "type": "string",
                        "example": "IN"
                      },
                      "sender_address": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "address_type": {
                              "type": "string",
                              "example": "PRESENT"
